<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dooyaspring.boothello.book.BookMapper">

    <select id="selectAllBooks" resultType="dooyaspring.boothello.book.BookDto">
        SELECT * FROM Book;
    </select>

    <select id="selectBookById" parameterType="String" resultType="dooyaspring.boothello.book.BookDto">
        SELECT * FROM Book WHERE id = #{id};
    </select>

</mapper>
